    flex-direction: column;
    gap: 10px;
    flex: 1;
    min-width: 250px;
}

/* 活动水平选择器 */
.activity-selector {
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.activity-selector label {
    font-size: 0.9rem;
    color: #34495e;
    font-weight: 500;
    margin-bottom: 10px;
}

.activity-selector select {
