            box-sizing: border-box;
            overflow-x: hidden;
            max-width: 100%;
            
            .progress-container,
            .workout-progress {
                flex-direction: column;
                text-align: center;
                gap: 15px;
                overflow-x: hidden;
                
                .circular-progress {
                    flex-shrink: 0;
                    margin: 0 auto;
                }
                
                .progress-info,
                .workout-info {
                    width: 100%;
                    max-width: 100%;
                    
                    .info-item {
                        justify-content: space-between;
                        padding: 5px 0;
                        border-bottom: 1px solid #f0f0f0;
                        
                        &:last-child {
                            border-bottom: none;
                        }
                        
                        .label,
                        .value {
                            font-size: 14px;
                            white-space: nowrap;
                            overflow: hidden;
                            text-overflow: ellipsis;
                        }
                    }
                }
            }
        }
    }
    
    /* 统一按钮在移动端的样式 */
    button, .btn-primary, .btn-secondary, .btn-outline, .btn-small {
        min-height: 44px; /* 确保触摸友好 */
        font-size: 14px;
        border-radius: 6px;
        box-sizing: border-box;
        max-width: 100%;
    }
    
    /* 热力图在移动端的适配 */
    .heatmap-section {
        .heatmap-legend {
            font-size: 12px;
            margin-bottom: 10px;
            
            .legend-scale {
                transform: scale(0.8);
                margin: 0 -10px;
            }
        }
        
        .heatmap-wrapper {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            
            .heatmap-content {
                min-width: 300px;
            }
            
            .heatmap-weekdays {
                .weekday-label {
                    font-size: 10px;
                }
            }
            
            .heatmap-grid {
                .heatmap-day {
                    width: 10px;
                    height: 10px;
                }
            }
        }
    }
    
    /* 表单元素移动端优化 */
    input, select, textarea {
        font-size: 16px; /* 防止iOS缩放 */
        padding: 10px;
        border-radius: 6px;
    }
    
    /* 今日训练标题和控制区域 */
    #today-title {
        font-size: 20px;
        margin-bottom: 15px;
    }
    
    .date-controls {
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 15px;
        
        input, button {
            flex: 1;
            min-width: 80px;
        }
    }
    
    /* 营养追踪表单 */
    .nutrition-tracking {
        .nutrition-form {
            .form-group {
                margin-bottom: 15px;
                
                label {
                    margin-bottom: 5px;
                    font-size: 14px;
                }
                
                input {
                    width: 100%;
                }
            }
        }
    }
    
    /* Tab 导航移动端优化 */
    .stats-tabs {
        margin-bottom: 20px;
        
        .tab-btn {
            font-size: 14px;
            padding: 10px 15px;
            min-height: 44px;
        }
    }
}

@media (max-width: 480px) {
    .fitness-container {
        padding: 10px 8px;
    }
    
    /* 训练计划编辑器小屏幕优化 */
    .days-container {
        .day-editor {
            padding: 10px;
            
            .day-header h6 {
                font-size: 14px;
            }
            
            .exercises-list .exercise-editor {
                padding: 10px;
                
                .exercise-inputs input {
                    font-size: 13px;
                    padding: 6px;
                }
                
                button {
                    height: 32px;
                    font-size: 12px;
                }
            }
        }
    }
    
    .plan-editor {
        padding: 12px 8px;
        
        .plan-basic-info {
            .form-group input, 
            .form-group textarea {
                font-size: 13px;
                padding: 8px;
            }
        }
    }
    
    /* 极小屏幕的适配 */
    .daily-stats-container {
        .calorie-progress-section,
        .workout-stats-section {
            .circular-progress {
                width: 120px;
                height: 120px;
                
                .progress-text {
                    .current-intake,
                    .completion-rate {
                        font-size: 18px;
                    }
                    
                    .recommended,
                    .subtitle {
                        font-size: 11px;
                    }
                }
            }
        }
    }
    
    /* 计划管理移动端优化 */
    .plans-management {
        .plans-header {
            .plan-actions {
                flex-direction: column;
                gap: 8px;
                
                button {
                    width: 100%;
                }
            }
        }
        
        .plan-card {
            .plan-controls {
                flex-direction: column;
                gap: 8px;
                
                button {
                    width: 100%;
                }
            }
        }
    }
    
    /* 热力图在极小屏幕的适配 */
    .heatmap-section {
        .heatmap-legend {
            font-size: 10px;
            
            .legend-scale {
                transform: scale(0.7);
                margin: 0 -15px;
            }
        }
    }
    
    /* 用户详情卡片移动端优化 */
    .user-detail-card {
        left: 5px;
        right: 5px;
        width: auto;
        
        .detail-content {
            padding: 15px;
        }
    }
}